{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react",
    "plugin:import/errors",
    "plugin:import/warnings",
    "prettier",
    "prettier/flowtype",
    "prettier/react"
  ],
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },
  "plugins": ["react-hooks"],
  "settings": {
    "import/core-modules": ["electron"],
    "import/extensions": [
      ".js",
      ".jsx",
      ".electron.js",
      ".web.js",
      ".native.js",
      ".ios.js",
      ".android.js"
    ]
  },
  "rules": {
    "no-unused-vars": "warn",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "import/no-named-as-default": 0,
    "import/no-unresolved": [2, { "ignore": ["electron"] }],
    "import/default": 0,
    "react/jsx-indent-props": 0
  }
}
